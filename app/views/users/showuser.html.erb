<h1 id="utitulo">Welcome <%=h @user.name %></h1>

<div id="usuario">
<%= error_messages_for 'login' %>
<p>Here is your personal information in the system.</p>
<p>
  <b>Name:</b>
  <%=h @user.name %>
</p>

<p>
  <b>Password:</b>
     Secret
</p>

<p>
  <b>Email:</b>
  <%=h @user.email %>
